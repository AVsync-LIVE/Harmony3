{
  "name": "harmony",
  "version": "0.0.1",
  "private": true,
  "author": "AVsync.LIVE LLC",
  "license": "MIT",
  "description": "Work with Harmony Hummingbird",
  "keywords": [],
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && electron .",
    "pack": "rm -rf ./dist && npm run build && npm run copy-assets && electron-builder --dir",
    "dist": "rm -rf ./dist && npm run build && npm run copy-assets && electron-builder",
    "generate-types": "npx pocketbase-typegen --db pocketbase/pb_data/data.db --out src/pocketbase-types.ts && cp src/pocketbase-types.ts ../app/src/redux-tk"
  },
  "build": {
    "appId": "harmony.avsync.live",
    "productName": "Harmony",
    "icon": "icon.ico",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "index.html",
      "package.json",
      "!pocketbase/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "artifactName": "Harmony-Setup-v${version}.${ext}"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.8",
    "@mozilla/readability": "^0.5.0",
    "@types/multer": "^1.4.11",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "duck-duck-scrape": "^2.2.5",
    "electron-log": "^5.0.3",
    "electron-updater": "^6.1.7",
    "eventsource": "^2.0.2",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "form-data-encoder": "^4.0.2",
    "formdata-node": "^6.0.3",
    "jsdom": "^24.0.0",
    "llamaindex": "^0.3.5",
    "lodash": "^4.17.21",
    "multer": "1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.0",
    "openai": "^4.38.5",
    "pocketbase": "^0.21.2",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/cors": "^2.8.17",
    "@types/electron": "^1.6.10",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.9.0",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
