{
  "name": "harmony",
  "version": "0.0.1",
  "private": true,
  "author": "AVsync.LIVE LLC",
  "license": "MIT",
  "description": "Work with Harmony Hummingbird",
  "keywords": [],
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && electron .",
    "pack": "rm -rf ./dist && npm run build && npm run copy-assets && electron-builder --dir",
    "dist": "rm -rf ./dist && npm run build && npm run copy-assets && electron-builder"
  },
  "build": {
    "appId": "harmony.avsync.live",
    "productName": "Harmony",
    "icon": "icon.ico",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "artifactName": "Harmony-Setup-v${version}.${ext}"
  },
  "dependencies": {
    "electron-log": "^5.0.3",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "form-data-encoder": "^4.0.2",
    "formdata-node": "^6.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
